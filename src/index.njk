---
pagination:
  data: locales
  size: 1
  alias: lang
permalink: "/{{ lang }}/"
layout: layouts/base.njk
bodyClass: home-page
---

<header class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img src="https://images.unsplash.com/photo-1593113598332-cd288d649433?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80" alt="Community" class="w-full h-full object-cover grayscale brightness-50 scale-105 animate-in" style="animation-duration: 1.5s;" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
  </div>
  <div class="container mx-auto px-6 relative z-10 text-center max-w-5xl mt-20">
    <p class="text-orange-600 font-bold tracking-[0.3em] text-xs uppercase mb-6 animate-in delay-100">{{ home[lang].hero_subtitle }}</p>
    <h1 class="text-5xl md:text-7xl lg:text-9xl font-serif text-white mb-8 leading-[0.9] tracking-tight animate-in delay-200">{{ home[lang].hero_main_text | safe }}</h1>
    <p class="text-lg md:text-2xl text-neutral-200 font-light mb-12 max-w-2xl mx-auto leading-relaxed text-balance animate-in delay-300">{{ home[lang].hero_body_text }}</p>
    <div class="flex flex-col sm:flex-row gap-6 justify-center animate-in delay-300">
      <a href="/{{ lang }}/resources/" class="bg-white text-black px-10 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-orange-600 hover:text-white transition-all duration-300 flex items-center justify-center">{{ home[lang].btn_resources }}</a>
      <a href="/{{ lang }}/about/" class="border border-white/30 backdrop-blur-sm text-white px-10 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-all duration-300 flex items-center justify-center">{{ home[lang].btn_impact }}</a>
    </div>
  </div>
</header>

<!-- 1. Watch: What We Do (Visual Break) -->
<section class="py-24 bg-black text-white text-center">
    <div class="container mx-auto px-6 max-w-4xl">
        <span class="text-orange-600 font-bold tracking-widest text-xs uppercase mb-4 block">{{ home[lang].video_title }}</span>
        <h2 class="text-3xl md:text-5xl font-serif mb-8 leading-tight">{{ home[lang].video_quote }}</h2>
        
        <div class="relative w-full aspect-video bg-neutral-900 mb-10 overflow-hidden rounded-sm shadow-2xl border border-neutral-800 group">
             <iframe 
                class="w-full h-full" 
                src="{{ home[lang].video_url }}" 
                title="Mission Video"
                frameborder="0" 
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                allowfullscreen>
            </iframe>
        </div>

        <a href="https://www.paypal.com/donate/?hosted_button_id=JG5GT99FFDQ4L" target="_blank" class="inline-block bg-orange-600 text-white px-10 py-4 rounded-sm text-xs font-bold uppercase tracking-widest hover:bg-white hover:text-black transition-colors">{{ home[lang].btn_donate }}</a>
    </div>
</section>

<!-- 2. Core Services Grid -->
<section class="py-24 bg-white">
    <div class="container mx-auto px-6">
        <div class="text-center mb-16 max-w-3xl mx-auto">
            <span class="text-orange-600 font-bold tracking-widest text-xs uppercase mb-4 block">{{ home[lang].services_title }}</span>
            <h2 class="text-4xl font-serif leading-tight text-neutral-900">{{ home[lang].services_heading }}</h2>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8">
            {% for service in home[lang].services %}
            <div class="p-8 border border-neutral-100 hover:border-orange-600 transition-colors group">
                <i data-lucide="{{ service.icon }}" class="w-10 h-10 text-neutral-400 group-hover:text-orange-600 mb-6 transition-colors"></i>
                <h3 class="text-2xl font-serif mb-4">{{ service.title }}</h3>
                <p class="text-neutral-600 font-light mb-6">{{ service.description }}</p>
                <a href="{{ service.link }}" class="text-xs font-bold uppercase tracking-widest border-b border-neutral-200 pb-1 group-hover:border-orange-600 transition-colors">Learn More</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- 3. How to Get Help (CTA Block) -->
<section class="py-20 bg-neutral-50 border-y border-neutral-200">
    <div class="container mx-auto px-6 text-center">
         <h2 class="text-3xl font-serif mb-12">{{ home[lang].cta_title }}</h2>
         <div class="flex flex-col md:flex-row justify-center gap-6">
             <a href="/{{ lang }}/resources/" class="bg-white border border-neutral-300 px-8 py-5 rounded-sm font-bold uppercase tracking-widest text-xs hover:bg-black hover:text-white hover:border-black transition-all">{{ home[lang].btn_need_help }}</a>
             <a href="/{{ lang }}/volunteer/" class="bg-white border border-neutral-300 px-8 py-5 rounded-sm font-bold uppercase tracking-widest text-xs hover:bg-black hover:text-white hover:border-black transition-all">{{ home[lang].btn_volunteer }}</a>
             <a href="https://www.paypal.com/donate/?hosted_button_id=JG5GT99FFDQ4L" target="_blank" class="bg-orange-600 border border-orange-600 text-white px-8 py-5 rounded-sm font-bold uppercase tracking-widest text-xs hover:bg-black hover:border-black transition-all">{{ home[lang].btn_donate_cta }}</a>
         </div>
    </div>
</section>

<!-- 4. Immediate Needs -->
<section class="py-24 bg-white">
    <div class="container mx-auto px-6 max-w-4xl">
        <div class="flex flex-col md:flex-row gap-12 items-start">
            <div class="flex-1">
                <span class="text-orange-600 font-bold tracking-widest text-xs uppercase mb-4 block">{{ home[lang].needs_title }}</span>
                <h3 class="text-3xl font-serif mb-6">{{ home[lang].needs_heading }}</h3>
                <ul class="space-y-4 mb-8">
                    {% for need in home[lang].needs_list %}
                    <li class="flex items-center gap-3 text-neutral-600 font-light"><i data-lucide="check" class="text-green-600 w-4 h-4"></i> {{ need }}</li>
                    {% endfor %}
                </ul>
                <a href="mailto:hopehasnoborders@gmail.com" class="text-orange-600 font-serif italic text-lg hover:text-black transition-colors flex items-center gap-2">{{ home[lang].email_cta }} <i data-lucide="arrow-right" class="w-4 h-4"></i></a>
            </div>
            <div class="flex-1 bg-neutral-900 text-white p-10 rounded-sm">
                <h4 class="font-serif text-2xl mb-4">{{ home[lang].impact_title }}</h4>
                <div class="space-y-6">
                    <div>
                        <span class="text-3xl font-bold text-orange-500 block mb-1">{{ home[lang].stat_families }}</span>
                        <span class="text-sm text-neutral-400 uppercase tracking-widest">{{ home[lang].stat_families_label }}</span>
                    </div>
                    <div>
                        <span class="text-3xl font-bold text-orange-500 block mb-1">{{ home[lang].stat_legal }}</span>
                        <span class="text-sm text-neutral-400 uppercase tracking-widest">{{ home[lang].stat_legal_label }}</span>
                    </div>
                     <div>
                        <span class="text-3xl font-bold text-orange-500 block mb-1">{{ home[lang].stat_meals }}</span>
                        <span class="text-sm text-neutral-400 uppercase tracking-widest">{{ home[lang].stat_meals_label }}</span>
                    </div>
                    <p class="text-xs text-neutral-500 mt-6 italic">{{ home[lang].stat_disclaimer }}</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-24 bg-neutral-50">
  <div class="container mx-auto px-6 max-w-4xl text-center">
    <i data-lucide="heart" class="w-6 h-6 text-orange-600 mx-auto mb-10 animate-pulse"></i>
    <h2 class="text-3xl md:text-5xl font-serif leading-snug text-neutral-900 mb-10 text-balance">{{ home[lang].mission_quote }}</h2>
  </div>
</section>


